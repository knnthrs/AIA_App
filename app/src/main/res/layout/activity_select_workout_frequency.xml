<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellowbackg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout Frequency"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How many days per week would you like to workout?"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <RadioGroup
            android:id="@+id/radioGroupFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_1_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 day per week"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/radio_2_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 days per week"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/radio_3_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 days per week"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/radio_4_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 days per week"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/radio_5_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 days per week"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/radio_6_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 days per week"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/radio_7_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7 days per week (daily)"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

        </RadioGroup>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@color/black"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp" />

    </LinearLayout>
</ScrollView>
