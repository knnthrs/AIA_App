<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/item_payment_history_bg"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="4dp"> <!-- gives a soft shadow on Android 5+ -->

    <TextView
        android:id="@+id/tv_plan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚±0.00"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="October 10, 2025"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GCash"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/green" />

    <TextView
        android:id="@+id/tv_membership_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membership: Oct 10 - Nov 10, 2025"
        android:textSize="13sp"
        android:textColor="@color/black" />
</LinearLayout>
