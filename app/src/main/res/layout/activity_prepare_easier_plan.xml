<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/yellowbackg">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_alignParentStart="true"
            android:contentDescription="Back" />

    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Feedback Text -->
            <TextView
                android:id="@+id/tvFeedbackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Too hard? I see..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shall I prepare an easier plan\nfor you?"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Option Buttons -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnKeepSame"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="No, just keep everything the same"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/option_button_unselected"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLittleEasier"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Just a little easier"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/option_button_unselected"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnWayEasier"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Way easier"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/option_button_selected"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Done"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>