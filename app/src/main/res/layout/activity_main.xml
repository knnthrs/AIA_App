    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yellowbackg">

    <!-- Bell icon in top right -->
        <FrameLayout
            android:id="@+id/bell_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/bell_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_bell"
                android:contentDescription="Notifications"
                android:foreground="?attr/selectableItemBackgroundBorderless" />

            <!-- Red Badge Dot -->
            <View
                android:id="@+id/notification_badge"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/notification_badge_bg"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="104dp">

            <LinearLayout
                android:id="@+id/greeting_section"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/greeting_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi User,"
                        android:textColor="@android:color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/welcome_back_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back!"
                        android:textColor="@android:color/black"
                        android:textSize="40dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!-- Wrapped main content in ScrollView -->
            <ScrollView
                android:id="@+id/main_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/main_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="16dp">

                    <!-- NEW PROMO CARD -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/promo_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#2b2b2b"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <!-- âœ… Use FrameLayout to layer image and "no promo" content -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp">

                            <!-- âœ… Image View (shown when promo exists) -->
                            <ImageView
                                android:id="@+id/testImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:contentDescription="Promo Image"
                                android:visibility="gone" />

                            <!-- âœ… Layout for "No Promo" content (shown when no promo) -->
                            <LinearLayout
                                android:id="@+id/promoLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:clickable="true"
                                android:focusable="true" />

                            <!-- âœ… Clickable hint text overlay (shown when promo exists) -->
                            <LinearLayout
                                android:id="@+id/promo_hint_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:background="#99000000"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_info"
                                    android:layout_marginEnd="6dp"
                                    android:tint="@color/white"
                                    android:contentDescription="Info icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tap to view full promo"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/membershipCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#2b2b2b"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:clipChildren="false"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:clipChildren="false"
                            android:padding="16dp">

                            <!-- Top Row: Title + Status -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Membership Status"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/membershipStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:text="INACTIVE"
                                    android:textColor="#F44336"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="8dp"
                                    android:src="@drawable/ic_chevron_right"
                                    android:tint="#888888"
                                    android:contentDescription="Manage membership" />

                            </LinearLayout>

                            <!-- Plan + Expiry + Coach (3 columns) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <!-- Left: Plan -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Plan Type"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/planType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="No plan selected"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <!-- Middle: Expiry -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Expires On"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/expiryDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="â€”"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Coach Name Row (Full Width Below) -->
                            <LinearLayout
                                android:id="@+id/coachNameContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Assigned Coach"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/coach_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No coach assigned"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <!-- Schedule Row (Full Width Below Coach) -->
                            <LinearLayout
                                android:id="@+id/scheduleContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Schedule"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/schedule_date_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="No schedule set"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/schedule_icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_schedule"
                                    android:tint="#FFC107"
                                    android:padding="4dp"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:contentDescription="Set schedule" />

                            </LinearLayout>


                            <!-- Call-to-Action: Tap to activate membership (shown only when INACTIVE) -->
                            <LinearLayout
                                android:id="@+id/membership_cta_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginStart="40dp"
                                android:layout_marginEnd="40dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:background="@drawable/rounded_cta_bg"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/ic_add_circle"
                                    android:tint="@color/white"
                                    android:contentDescription="Add membership" />

                                <TextView
                                    android:id="@+id/membership_cta_text"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Tap to activate membership"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:maxLines="1"
                                    android:ellipsize="end" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/ic_chevron_right"
                                    android:tint="@color/white"
                                    android:contentDescription="Open" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Daily Challenge Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/daily_challenge_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#FFFFFF"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Daily Challenge"
                                    android:textColor="#333333"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/daily_challenge_emoji"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸŽ¯"
                                    android:textSize="24sp" />

                            </LinearLayout>

                            <!-- Challenge Description -->
                            <TextView
                                android:id="@+id/daily_challenge_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Loading challenge..."
                                android:textColor="#666666"
                                android:textSize="16sp"
                                android:layout_marginBottom="16dp"
                                android:minHeight="48dp" />

                            <!-- Progress Bar -->
                            <ProgressBar
                                android:id="@+id/daily_challenge_progress"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_marginBottom="8dp"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:progressTint="#4CAF50"
                                android:max="100"
                                android:progress="0" />

                            <!-- Progress Text -->
                            <TextView
                                android:id="@+id/daily_challenge_progress_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0/10"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:layout_marginBottom="16dp" />

                            <!-- Complete Button -->
                            <Button
                                android:id="@+id/btn_complete_challenge"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="Complete Challenge"
                                android:textColor="@color/white"
                                android:backgroundTint="#4CAF50"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- existing "Today's Activities" CardView with this updated version -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/activities_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/zxing_transparent"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Header with title and chevron -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="1dp">

                                <TextView
                                    android:id="@+id/tv_activity_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="YOUR WORKOUTS"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="end|center_vertical"
                                    android:layout_marginEnd="16dp"
                                    android:src="@drawable/ic_chevron_right"
                                    android:tint="#666666"
                                    android:contentDescription="View workouts" />

                            </FrameLayout>

                            <!-- Horizontal ScrollView for Dynamic Activities -->
                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/activities_horizontal_container"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <!-- Dynamic cards will be added here programmatically -->

                                </LinearLayout>

                            </HorizontalScrollView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- Replace your existing bottom LinearLayout with this -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Goals Progress Card (Left) -->
                        <!-- Replace your existing goals progress card with this updated version -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/goals_progress_card"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#2b2b2b"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            android:clickable="false"
                            android:focusable="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/goals_progress_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="Weekly Goal"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/goals_progress_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0/0"
                                    android:textColor="#4CAF50"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/goals_progress_subtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Workouts Done"
                                    android:textColor="#888888"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Streak Counter Card (Right) -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/streak_counter_card"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#2b2b2b"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:text="Streak"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/streak_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="7"
                                        android:textColor="#FF6B35"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:text="ðŸ”¥"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Days"
                                    android:textColor="#888888"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <!-- Chevron icon indicator -->
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="top|end"
                                android:layout_margin="12dp"
                                android:src="@drawable/ic_chevron_right"
                                android:tint="#888888"
                                android:contentDescription="View streak" />

                        </FrameLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent" />


                </LinearLayout>



            </ScrollView>


        </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fabAlignmentMode="center"
        app:fabAnchorMode="cradle"
        app:fabCradleMargin="15dp"
        app:fabCradleVerticalOffset="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        android:layout_gravity="bottom">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"

            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.bottomappbar.BottomAppBar>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qr"
        app:layout_anchor="@id/bottomAppBar"
       />


</androidx.coordinatorlayout.widget.CoordinatorLayout>