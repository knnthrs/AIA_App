<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Order Number -->
        <TextView
            android:id="@+id/tv_exercise_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Exercise Name -->
        <TextView
            android:id="@+id/tv_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push Up"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- Exercise Details -->
        <TextView
            android:id="@+id/tv_exercise_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do this exercise for chest strength."
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Rest Time + Info Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tv_exercise_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest: 60 seconds"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_exercise_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Info" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
