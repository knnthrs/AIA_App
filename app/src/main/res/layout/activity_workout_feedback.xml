<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/yellowbackg">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentStart="true"
            android:contentDescription="Close" />


    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">


            <!-- Feedback Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give your coach some feedback..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How do you feel about\ntoday's workout?"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Option Buttons -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTooEasy"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Too easy"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/option_button_unselected"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLittleEasy"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="A little easy"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/option_button_unselected"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnJustRight"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Just right"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/option_button_selected"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLittleHard"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="A little hard"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/option_button_unselected"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTooHard"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Too hard"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/option_button_unselected"
                android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Done"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>