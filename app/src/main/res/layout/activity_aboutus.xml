<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/aboutusbg">

    <!-- Header with Back Button -->
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/yellow"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Back button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="About Us"
            android:textColor="@color/yellow"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"
                android:text="About AIA Fitness Gym"
                android:textColor="@color/yellow"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="We provide top-tier gym facilities, classes, and trainers to help you reach your fitness goals."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

            <!-- Vision Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Our Vision"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/yellow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:text="To be the leading fitness destination in the community, empowering individuals to achieve their health and wellness goals through innovative training programs, state-of-the-art facilities, and a supportive environment that inspires lifelong fitness."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:lineSpacingExtra="4dp" />

            <!-- Mission Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Our Mission"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/yellow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:text="At AIA Fitness Gym, we are committed to:\n\n• Providing personalized fitness programs tailored to each member's unique needs and goals\n\n• Creating a welcoming and inclusive community where everyone feels motivated and supported\n\n• Offering expert coaching and guidance from certified professionals\n\n• Maintaining modern equipment and clean facilities for optimal workout experience\n\n• Promoting holistic wellness through fitness, nutrition, and mental well-being"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:lineSpacingExtra="4dp" />

            <!-- Contact Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Contact"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/yellow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0917 637 0787"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <!-- Location Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Location"
                android:textColor="@color/yellow"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                android:text="Blk E-13 L3 Fatima Rd. Brgy San Mateo, 4114"
                android:textSize="16sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>