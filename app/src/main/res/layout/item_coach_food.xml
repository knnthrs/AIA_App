<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Food Name and Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Grilled Chicken Breast"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit"
                android:tint="@color/primary"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete"
                android:tint="@android:color/holo_red_dark"/>
        </LinearLayout>

        <!-- Calories -->
        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="165 cal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginTop="8dp"/>

        <!-- Macros -->
        <TextView
            android:id="@+id/tvMacros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P: 31g | C: 0g | F: 3.6g"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"/>

        <!-- Tags -->
        <TextView
            android:id="@+id/tvTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High Protein, Keto, Low Carb"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_light"
            android:padding="6dp"
            android:visibility="visible"/>

        <!-- Coach Notes -->
        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great post-workout meal for muscle recovery"
            android:textSize="13sp"
            android:textColor="@color/text_primary"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:visibility="visible"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

