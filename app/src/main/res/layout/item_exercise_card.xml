<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Left side: all text info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Row for number + name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_exercise_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_exercise_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Push Up"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>




            <TextView
                android:id="@+id/tv_exercise_sets_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sets x reps"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_exercise_target_muscles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target: "
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/tv_exercise_equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipment: "
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>

        <!-- Right side: GIF thumbnail -->
        <ImageView
            android:id="@+id/iv_exercise_gif"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
