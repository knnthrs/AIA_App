<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Exercise Number -->
        <TextView
            android:id="@+id/tv_exercise_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Exercise Name -->
        <TextView
            android:id="@+id/tv_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push Up"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Exercise Details -->
        <TextView
            android:id="@+id/tv_exercise_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chest exercise"
            android:textSize="14sp" />

        <!-- Rest Time -->
        <TextView
            android:id="@+id/tv_exercise_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rest: 60s"
            android:textSize="14sp"
            android:textStyle="italic" />

        <!-- ✅ New: Muscles -->
        <TextView
            android:id="@+id/tv_exercise_muscles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscles: Chest, Triceps"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- ✅ New: Equipment -->
        <TextView
            android:id="@+id/tv_exercise_equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment: None"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
