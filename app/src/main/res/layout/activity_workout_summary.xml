<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellowbackg"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_gravity="center_vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_summary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ‰ Great Work!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@drawable/rounded_white_background"
            android:elevation="4dp" />

        <!-- Before/After Comparison - Side by Side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Your Progress Today"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:paddingBottom="8dp"
                android:background="#F5F5F5"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Metric"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#757575" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Before"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="After"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Weight Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âš–ï¸ Weight"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tv_weight_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="70.0kg"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_weight_after"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="69.9kg"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- BMI Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:padding="8dp"
                android:background="#FAFAFA">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“Š BMI"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tv_bmi_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24.2"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_bmi_after"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24.1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Calories Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”¥ Calories"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tv_calories_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_calories_after"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="250"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Exercises Completed Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:padding="8dp"
                android:background="#FAFAFA">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âœ… Exercises"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tv_exercises_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_exercises_after"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Duration Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â±ï¸ Duration"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tv_duration_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0min"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_duration_after"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30min"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Muscle Groups Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FAFAFA">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ’ª Muscles"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tv_muscles_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_muscles_after"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/black_button_bg"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>

